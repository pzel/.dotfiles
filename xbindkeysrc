# For the benefit of emacs users: -*- shell-script -*-

# Basic mac compatibility

"sleep 0.1; xdotool key 'ctrl+minus'"
    Mod4 + minus + release
"sleep 0.1; xdotool key 'ctrl+plus'"
    Mod4 + plus + release
"sleep 0.1; xdotool key 'ctrl+0'"
    Mod4 + 0 + release
"sleep 0.1; xdotool key 'ctrl+r'"
    Mod4 + r + release
"sleep 0.1; xdotool key 'ctrl+t'"
    Mod4 + t + release
"sleep 0.1 ; xdotool key 'ctrl+c'"
    Mod4 + c + Release
"sleep 0.1; xdotool key 'ctrl+c'"
    Mod4 + v + Release


# Launchers

"xfterm"
    Mod4 + F5
"focus_window emacs"
    Mod4 + F6
"focus_window thunderbird"
    Mod4 + F7
"focus_window firefox"
    Mod4 + F8
"thunar"
    Mod4 + h
"screenshot"
    Shift + Mod4 + 4 + Release
"kupfer"
    Mod4 + Return
"mute_zoom"
    Mod4 + Control + m + Release

# Hardware control

"bash /home/p/.screenlayout/laptop-lores.sh"
    Mod4 + F9
"monitors"
    Control + Shift + Mod4 + F9
"pzel_lock"
    Control + Mod4 + Home
"sudo zzz"
    Control + Mod4 + End
"amixer -q set Master 10%-"
    XF86AudioLowerVolume
"amixer -q set Master on ; amixer -q set Master 10%+"
    XF86AudioRaiseVolume
"toggle_mute"
    XF86AudioMute
"light -U 5"
    XF86MonBrightnessDown
"light -U 5"
    Mod4 + F11 + Release
"light -A 5"
    XF86MonBrightnessUp
"light -A 5"
    Mod4 + F12
"light -S 3"
    Mod4 + F10
"xcalib -i -a"
    Shift + Mod4 + F9 + Release
"find-cursor -o"
    Shift + Mod4 + Escape + Release

# A list of keys is in /usr/include/X11/keysym.h and in
# /usr/include/X11/keysymdef.h
# The XK_ is not needed.
#
# List of modifier:
#   Release, Control, Shift, Mod1 (Alt), Mod2 (NumLock),
#   Mod3 (CapsLock), Mod4, Mod5 (Scroll).
#
