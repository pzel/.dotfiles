# For the benefit of emacs users: -*- shell-script -*-


"sleep 0.1; xdotool key 'ctrl+minus'"
    Mod4 + minus + Release

"sleep 0.1; xdotool key 'ctrl+plus'"
    Mod4 + plus + Release

"sleep 0.1; xdotool key 'ctrl+r'"
    Mod4 + r + Release

"sleep 0.1; xdotool key 'ctrl+t'"
    Mod4 + t + Release

"sleep 0.1 ; xdotool key 'ctrl+KP_Insert'"
    Mod4 + c + Release

"sleep 0.1; xdotool key 'shift+KP_Insert'"
    Mod4 + v + Release

"zeal"
    Mod4 + F1

"xfterm"
    Mod4 + F5

"xfterm urxvt"
    Mod4 + F6

"bash /home/p/.screenlayout/laptop-lores.sh"
    Mod4 + F7

"thunar"
    Mod4 + h

"slock"
    Control + Mod4 + Home

"sudo zzz"
    Control + Mod4 + End

"screenshot"
    Shift + Mod4 + 4 + Release

"kupfer"
    Mod4 + Return

"toggle_mute"
    XF86AudioMute

"mute_zoom"
    Mod4 + Control + m + Release

"amixer -q set Master 10%-"
    XF86AudioLowerVolume

"amixer -q set Master on ; amixer -q set Master 10%+"
    XF86AudioRaiseVolume

"light -U 5"
    XF86MonBrightnessDown
"light -U 5"
    Mod4 + F11 + Release

"light -A 5"
    XF86MonBrightnessUp
"light -A 5"
    Mod4 + F12

# Invert screen colors
"xcalib -i -a"
    Shift + Mod4 + F12 + Release

# Show mouse cursor
"find-cursor -o"
    Shift + Mod4 + Escape + Release

# A list of keys is in /usr/include/X11/keysym.h and in
# /usr/include/X11/keysymdef.h
# The XK_ is not needed.
#
# List of modifier:
#   Release, Control, Shift, Mod1 (Alt), Mod2 (NumLock),
#   Mod3 (CapsLock), Mod4, Mod5 (Scroll).
#
