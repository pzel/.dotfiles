#!/bin/sh
BATTERY='/sys/bus/acpi/drivers/battery/PNP0C0A:00/power_supply/BAT0'

main() {
    capacity=$(cat $BATTERY/capacity)
    status=$(cat $BATTERY/status)
    #icon=$(block ${capacity})
    icon=$(number ${capacity})
    echo ${capacity} >&2
    case ${status} in
        "Discharging") echo -n "${icon}ü†õ" ;;
        "Charging") echo -n "${icon}ü†ô" ;;
        *) echo -n "${icon} " ;;
    esac
}

number() {
  #echo -n "$(($1/10))"
  echo -n "$1"
}

block() {
    if [ ${1} -gt 87 ]; then echo -n '‚ñà';
    elif [ ${1} -gt 75 ]; then echo -n '‚ñá';
    elif [ ${1} -gt 62 ]; then echo -n '‚ñÜ';
    elif [ ${1} -gt 50 ]; then echo -n '‚ñÖ';
    elif [ ${1} -gt 37 ]; then echo -n '‚ñÑ';
    elif [ ${1} -gt 25 ]; then echo -n '‚ñÉ';
    elif [ ${1} -gt 12 ]; then echo -n '‚ñÇ';
    elif [ ${1} -gt 6 ]; then echo -n '‚ñÅ';
    else echo '_';
    fi
}

main
